<Window x:Class="TopConfigTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:crtls="clr-namespace:TopConfigTool.Controls"
        xmlns:vm="clr-namespace:TopConfigTool.Core"
        Height="350" Width="525"
        Icon="/TopConfigTool;component/Resources/tools.ico"
        Title="{Binding AppTitle}"
        DataContext="{x:Static vm:MainViewModel.Instance}">
    <Grid>
        <TabControl
            ItemsSource="{Binding DeviceViewModel.DeviceClassfications}">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Header" Value="{Binding Name}"/>
                    <Setter Property="Content" Value="{Binding Content}"/>
                </Style>
            </TabControl.Resources>
        </TabControl>
    </Grid>
</Window>
